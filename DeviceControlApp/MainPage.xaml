<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeviceControlApp.MainPage">
    
    

    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <!-- Поисковая строка -->
                <SearchBar Placeholder="Search..." TextChanged="InputView_OnTextChanged" HorizontalOptions="FillAndExpand" VerticalOptions="Start"/>
                
                <!-- Меню фильтров -->
                <Button Text="Filters" Clicked="FiltersButton_Clicked" HorizontalOptions="End" VerticalOptions="Start"/>
            </StackLayout>

            <!-- Скролящаяся CollectionView -->
            <StackLayout>
                <CollectionView ItemsSource="{Binding Devices, Mode=TwoWay}"  ItemsUpdatingScrollMode="KeepLastItemInView">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,0,0,10" Padding="10" BackgroundColor="#F0F0F0" CornerRadius="5" HasShadow="True">
                                <StackLayout>
                                    <Label Text="{Binding Name, Mode=TwoWay}" FontAttributes="Bold" FontSize="Large"/>
                                    <Label Text="FactoryNumber:" FontAttributes="Bold" />
                                    <Label Text="{Binding FactoryNumber, Mode=TwoWay}" />
                                    <Label Text="InventoryNumber:" FontAttributes="Bold" />
                                    <Label Text="{Binding InventoryNumber, Mode=TwoWay}" />
                                    <Label Text="Owner:" FontAttributes="Bold" />
                                    <Label Text="{Binding Owner, Mode=TwoWay}" />
                                    <Label Text="Description:" FontAttributes="Bold" />
                                    <Label Text="{Binding Description, Mode=TwoWay}" />
                                    <StackLayout Orientation="Horizontal">
                                        <Button Text="Edit" Clicked="EditButton_Clicked"/>
                                        <Button Text="Delete" Clicked="DeleteButton_Clicked"/>
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

            <!-- Кнопка "Добавить" внизу страницы -->
            <Button Text="Add" Clicked="AddButton_Clicked" HorizontalOptions="CenterAndExpand" VerticalOptions="End">
                <Button.ImageSource>
                    <FontImageSource Glyph="&#xf067;" Size="Large"/>
                </Button.ImageSource>
            </Button>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DeviceControlApp"
             x:Class="DeviceControlApp.MainPage">
             

    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <!-- Поисковая строка -->
                <SearchBar Placeholder="Search..." TextChanged="InputView_OnTextChanged" HorizontalOptions="FillAndExpand" VerticalOptions="Start"/>
                
                <!-- Меню фильтров -->
                <Button Text="Filters" Clicked="FiltersButton_Clicked" HorizontalOptions="End" VerticalOptions="Start"/>
            </StackLayout>

            <!-- Скролящаяся CollectionView -->
            <CollectionView ItemsSource="{Binding Devices, Mode=TwoWay}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="{Binding Id, Mode=TwoWay}" />
                            <Label Text="{Binding Name, Mode=TwoWay}" />
                            <StackLayout Orientation="Horizontal">
                                <Button Text="Edit" Clicked="EditButton_Clicked"/>
                                <Button Text="Delete" Clicked="DeleteButton_Clicked"/>
                            </StackLayout>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Кнопка "Добавить" внизу страницы -->
            <Button Text="Add" Clicked="AddButton_Clicked" HorizontalOptions="CenterAndExpand" VerticalOptions="End">
                <Button.ImageSource>
                    <FontImageSource Glyph="&#xf067;" Size="Large"/>
                </Button.ImageSource>
            </Button>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>